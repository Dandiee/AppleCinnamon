        </Grid>-->

            </Grid>
        </TabItem>
        <TabItem Header="Cubic Bezier">
            <Canvas Width="400" Height="400">
                <Path Stroke="Black" StrokeThickness="1">
                    <Path.Data>
                        <PathGeometry>
                            <PathGeometry.Figures>
                                <PathFigureCollection>
                                    <PathFigure StartPoint="10,100">
                                        <PathFigure.Segments>
                                            <PathSegmentCollection>
                                                <BezierSegment Point1="200,0" Point2="100,200" Point3="300,100" />
                                            </PathSegmentCollection>
                                        </PathFigure.Segments>
                                    </PathFigure>
                                </PathFigureCollection>
                            </PathGeometry.Figures>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                <Ellipse Canvas.Left="5" Canvas.Top="95" Width="10" Height="10" Fill="Red"></Ellipse>
                <Ellipse Canvas.Left="145" Canvas.Top="-5" Width="10" Height="10" Fill="Blue"></Ellipse>
                <Ellipse Canvas.Left="145" Canvas.Top="195" Width="10" Height="10" Fill="Blue"></Ellipse>
                <Ellipse Canvas.Left="295" Canvas.Top="95" Width="10" Height="10" Fill="Blue"></Ellipse>
            </Canvas>
        </TabItem>
    </TabControl>
   
</Window>
